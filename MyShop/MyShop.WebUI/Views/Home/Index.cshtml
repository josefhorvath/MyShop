@model IEnumerable<MyShop.Core.Models.Product>


@{
    ViewBag.Title = "Home Page";
}

<main>
  <div class="row">

    @foreach(var item in Model)
     {
        <div class="col-md-4" style="height:450px">
            <div style="padding:10px; margin:10px; border: solid thin whitesmoke">
                <div class="col-md-12 mb-2">
                    <img class="img img-fluid" style="height:250px;" src="~/Content/ProductImages/@item.Image" />
                </div>
                <div class="col-md-12">
                    <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
                </div>
                <div class="col-md-12">
                    <p>@item.Description</p>
                </div>
                <div class="col-md-12">
                    <h4>$ @item.Price</h4>
                </div>
                <div class="col-md=12">
                    <a href="#" class="btn btn-primary">Add to Basket</a>
                </div>
            </div>
        </div>
     }

   </div>

  <div class="col-md-12 clearfix"></div>
   
</main>